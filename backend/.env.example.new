# NeonChat Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here  # Optional

# Server Configuration
PORT=8004
HOST=0.0.0.0
DEBUG=True

# File Upload Configuration
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Audio Configuration
AUDIO_MAX_CHUNK_SIZE=16000

# Meta AI Integration (Optional)
META_API_KEY=your_meta_api_key_here

# Abacus.ai Integration
ABACUS_API_KEY=your_abacus_api_key_here
ABACUS_AGENT_SEARCH_DEPLOYMENT_ID=your_search_agent_deployment_id_here
ABACUS_AGENT_IMAGE_DEPLOYMENT_ID=your_image_generation_agent_deployment_id_here
ABACUS_AGENT_DIARY_DEPLOYMENT_ID=your_diary_agent_deployment_id_here
ABACUS_AGENT_CHAT_DEPLOYMENT_ID=your_chat_agent_deployment_id_here

# Do not put this file in version control
# Make a copy of this file named '.env' and add your actual API keys there
