# API Keys - Replace with your actual keys
# You only need to add keys for the providers you plan to use
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
HOST=0.0.0.0  # Use 0.0.0.0 to allow external connections, 127.0.0.1 for local only
PORT=8000     # The port the backend server will run on
DEBUG=False   # Set to True for development mode with auto-reload

# Model Configuration
DEFAULT_MODEL=gpt-4o-mini  # Default model to use when none is specified

# IMPORTANT: If you change the PORT here, you must also update the WebSocket proxy in
# frontend/vite.config.js to match this port for WebSocket connections to work correctly
